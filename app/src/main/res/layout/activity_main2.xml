<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="mx.com.cristian.mascotas.MainActivity">
    <include
        android:id="@+id/actionbar"
        layout="@layout/actionbar">
    </include>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="60dp"
        android:layout_below="@+id/actionbar"
        tools:layout_editor_absoluteX="0dp"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/actionbar">

        <ImageView
            android:id="@+id/imgFoto"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:src="@drawable/cachorro" />

        <GridLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/huesoBlanco"
                android:layout_width="76dp"
                android:layout_height="wrap_content"
                android:src="@drawable/icons8_dog_bone_48" />

            <TextView
                android:id="@+id/textViewNombre"
                android:layout_width="179dp"
                android:layout_height="wrap_content"
                android:text="Tatis"
                android:textSize="20sp"
                android:textStyle="bold" />

            <ImageView
                android:id="@+id/huesoColor"
                android:layout_width="76dp"
                android:layout_height="34dp"
                android:layout_column="5"
                android:layout_row="0"
                android:src="@drawable/icons8_dog_bone_48color" />

            <TextView
                android:id="@+id/numText"
                android:layout_height="wrap_content"
                android:layout_column="3"
                android:layout_row="0"
                android:text="5"
                android:textSize="20sp"
                android:textStyle="bold" />
        </GridLayout>

    </LinearLayout>


</android.support.constraint.ConstraintLayout>